{
  "name": "pencilbox-announcements-cms",
  "version": "1.0.0",
  "description": "CDN-powered per-client banner engine",
  "main": "dist/banner.min.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/heytextile/pencilbox-announcements-cms.git"
  },
  "author": "Textile Creative Studios LLC",
  "license": "MIT",
  "homepage": "https://github.com/heytextile/pencilbox-announcements-cms#readme",
  "keywords": ["banner", "cdn", "announcements", "pencilbox", "javascript", "css"],
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "cleancss -o dist/banner.min.css src/banner.css",
    "build:js": "terser src/banner.js -o dist/banner.min.js -c -m",
    "dev": "python3 -m http.server 8080 || python -m SimpleHTTPServer 8080",
    "preview": "npm run dev"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "terser": "^5.24.0"
  },
  "files": [
    "dist/",
    "banners.json",
    "banners/"
  ]
}